---
import Base from "@/layouts/Base.astro";
import BannerEn from "@/layouts/components/BannerEn.astro";
import CtaEn from "@/layouts/partials/CtaEn.astro";
import { getEntryBySlug } from "astro:content";
import HowItWorksEn from "@/layouts/components/how-it-worksEn.astro";
import { Marquee } from "@/layouts/components/marquee/Marquee.jsx";
import KeyFeatures from "@/layouts/components/KeyFeatures.astro";
import Service from "@/layouts/components/Service.astro";
import KeyFeaturesEn from "./KeyFeaturesEn.astro";

const homepage = await getEntryBySlug("homepageEn", "index");
const { banner, key_features, service, testimonial } = homepage.data;
---

<Base>
  <!-- banner -->
  <BannerEn banner={banner} />
  <Marquee client:load />
  <!-- how it works -->
  <HowItWorksEn />
  <!-- key features -->
  <KeyFeatures key_features={key_features} />
  <!-- video section -->
  <!-- <Service service={service} /> -->
  <!-- testimonial -->
  <!-- <Testimonial testimonial={testimonial} /> -->
  <!-- call to action -->
  <CtaEn />
</Base>
