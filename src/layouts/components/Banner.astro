---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import { EmblaCarouselComponent } from "../components/EmblaCarouselComponent.jsx";
const { banner } = Astro.props;
const { title, subtitle, button, image, content } = banner;
---

<section class="hero banner relative h-screen" id="hero">
  <div class="inner">
    <div class="copy">
      <div
        class="container text-white absolute bottom-0 mx-auto right-0 left-0">
        <h1 class="font-black lg:!text-[10vw]" set:html={markdownify(title)} />
        <hr class="mx-auto w-[75%]" />
        <h5
          class="mt-4 font-bold text-base !text-white text-xl lg:!text-4xl"
          set:html={markdownify(subtitle)}
        />

        <!-- {
              button.enable && (
                <a class="btn btn-white mt-8" href={button.link}>
                  {button.label}
                </a>
              )
            } -->

        <!-- <EmblaCarouselComponent client:visible /> -->
      </div>
    </div>
  </div>
</section>
<style>
  section {
    z-index: 1;
    position: fixed;
    width: 100%;
    height: 60px;
    background: rgba(0, 0, 0, 0.1);
    height: 100vh;
  }

  #hero {
    background: url("../public/images/inducitrica/quinta3.jpg");
    background-size: cover;
    background-position: center center;
    background-attachment: fixed;
    z-index: 1;
  }
  .hero,
  .content {
    text-align: center;
    position: relative;
    width: 100%;
  }

  .inner {
    min-height: 600px;
    position: relative;
  }

  #hero .inner {
    background-size: cover;
    background: rgba(0, 0, 0, 0.20)
      url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAACCAYAAACddGYaAAAAD0lEQVQIW2NkQABjRmQOAAM+AGkQsDBSAAAAAElFTkSuQmCC);
    z-index: -1;
    width: 100%;
    height: 100%;
  }
  .copy {
    position: absolute;
    top: 50%;
    height: 10em;
    margin-top: -5em;
    width: 100%;
  }
</style>
