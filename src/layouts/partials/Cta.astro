---
import config from "@/config/config.json";

const {
  call_to_action: {
    title,
    img,
    button: { label, link },
  },
} = config;
---

<section class="px-5 py-20 xl:py-[120px]">
  <div class="container">
    <div
      class="bg-gradient-to-t from-[#e6f6ee] to-[#8bcfad] row justify-center rounded-b-[80px] rounded-t-[20px] px-[30px] pb-[75px] pt-16">
      <div class="lg:col-11">
        <div class="row">
          <div class="lg:col-7">
            <h2 class="h1 font-black text-balance lg:text-[3vw] drop-shadow text-white">{title}</h2>
            <a class="btn btn-white mt-8" href={link}>{label}</a>
          </div>
          <div class="mt-8 lg:col-5 lg:mt-0">
            <!-- <img src={img} alt="cta" class="w-full" /> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
